	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   hypodermic"
	@echo "   hypodermic.tests"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
