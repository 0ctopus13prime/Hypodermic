ifndef config
  config=debug32
endif
export config

PROJECTS := hypodermic hypodermic.tests

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

hypodermic: 
	@echo "==== Building hypodermic ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f hypodermic.make

hypodermic.tests: hypodermic
	@echo "==== Building hypodermic.tests ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f hypodermic.tests.make

clean:
	@${MAKE} --no-print-directory -C . -f hypodermic.make clean
	@${MAKE} --no-print-directory -C . -f hypodermic.tests.make clean

help:
